@model VacationManager.Models.Vacation

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Vacation</legend>
        @ViewBag.ErrorMsg
        @Html.HiddenFor(model => model.UserId, new { Value = ViewBag.UserId })

        <div class="editor-label">
            @Html.LabelFor(model => model.VacationDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VacationDate)
            @Html.ValidationMessageFor(model => model.VacationDate)
        </div>


        @Html.HiddenFor(model => model.IsApproved, new { Value = ViewBag.IsApproved })
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
